<p id="notice"><%= notice %></p>
<div class="container">
<h1>Sections</h1>

      <% if @sections.blank? %>
          <h4>No results found for "<%= params[:q] %>".Ensure that you are searching for a section number!</h4>
      <% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Number</th>
      <th>Course</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.number %></td>
        <td><%= section.course.name %></td>
        <td><%= section.professor.name %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<span class="new_sec"><%= link_to 'New Section', new_section_path %></span>
