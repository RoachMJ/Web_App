<%= form_for(section) do |f| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :course_id %>
    <%= f.select(:course_id, options_from_collection_for_select(Course.all, :id, :name)) %>
  </div>

  <div class="field">
    <%= f.label :professor_id %>
    <%= f.select(:professor_id, options_from_collection_for_select(Professor.all, :id, :name)) %>
  </div>

  <div class="field">
    <%= f.label :number %>
    <%= f.number_field :number %>
  </div>



  <div class="actions">
   <%= f.submit class: 'submit_button' %>
  </div>
<% end %>
